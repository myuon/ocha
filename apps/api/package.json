{
  "name": "@ocha/api",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "exports": {
    "./types/*": "./src/types/*",
    ".": "./src/index.ts"
  },
  "scripts": {
    "dev": "node scripts/dev-runner.mjs",
    "build": "tsc -p tsconfig.json",
    "build:with-static": "tsc -p tsconfig.json && node scripts/copy-static.mjs",
    "start": "node dist/index.js",
    "typecheck": "tsc --noEmit",
    "lint": "biome lint src/",
    "lint:fix": "biome lint --write src/",
    "format": "biome format --write src/",
    "check": "biome check --write src/",
    "db:push": "cd ../.. && npx drizzle-kit push",
    "db:studio": "cd ../.. && npx drizzle-kit studio",
    "db:introspect": "cd ../.. && npx drizzle-kit introspect"
  },
  "dependencies": {
    "@ai-sdk/openai": "^2.0.7",
    "@hono/node-server": "^1.11.7",
    "@hono/zod-validator": "^0.7.2",
    "@ocha/types": "file:../types",
    "ai": "^5.0.8",
    "better-sqlite3": "^12.2.0",
    "dotenv": "^17.2.1",
    "drizzle-kit": "^0.31.4",
    "drizzle-orm": "^0.44.4",
    "google-auth-library": "^10.2.1",
    "hono": "^4.9.0",
    "nanoid": "^5.1.5",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.1.4",
    "@types/better-sqlite3": "^7.6.13",
    "@types/dotenv": "^6.1.1",
    "@types/node": "^22.5.2",
    "tsx": "^4.19.1",
    "typescript": "^5.5.4"
  }
}
