{
  "name": "ocha",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*"
  ],
  "scripts": {
    "dev": "concurrently -k -n web,api -c blue,green \"npm:dev:web\" \"npm:dev:api\"",
    "dev:web": "npm run dev -w apps/web",
    "dev:api": "npm run dev -w apps/api",
    "build": "npm run build -w apps/web && npm run build:with-static -w apps/api",
    "start": "npm run start -w apps/api",
    "typecheck": "npm run typecheck -w apps/types && npm run typecheck -w apps/web && npm run typecheck -w apps/api",
    "lint": "biome lint apps/",
    "lint:fix": "biome lint --write apps/",
    "format": "biome format --write apps/",
    "check": "biome check --write apps/"
  },
  "devDependencies": {
    "concurrently": "^9.0.1"
  }
}
